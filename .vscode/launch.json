    "version": "0.2.0",
    "configurations": [
        {
            "name": "CAN Receiver Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/receiver/build/CanAppReceiver",
            "args": [],
            "cwd": "${workspaceFolder}/receiver/build/",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "CAN Transmitter Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/transmitter/build/CanAppTransmitter",
            "args": [],
            "cwd": "${workspaceFolder}/transmitter/build/",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}